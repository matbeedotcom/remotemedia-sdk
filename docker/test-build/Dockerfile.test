# Test Dockerfile to verify iceoryx2 installation
# This matches what image_builder.rs generates

# ============================================================================
# Stage 1: Builder
# ============================================================================
FROM python:3.11-slim as builder

RUN apt-get update && apt-get install -y --no-install-recommends build-essential gcc g++ git && rm -rf /var/lib/apt/lists/*
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Try to install iceoryx2
RUN pip install --no-cache-dir iceoryx2

# ============================================================================
# Stage 2: Runtime
# ============================================================================
FROM python:3.11-slim as runtime

COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"
RUN useradd -m -u 1000 remotemedia && mkdir -p /tmp/iceoryx2 && chown remotemedia:remotemedia /tmp/iceoryx2
USER remotemedia
WORKDIR /home/remotemedia/app
ENV PYTHONUNBUFFERED=1 PYTHONDONTWRITEBYTECODE=1
STOPSIGNAL SIGTERM
CMD ["python", "-c", "import iceoryx2; print('iceoryx2 version:', iceoryx2.__version__)"]
